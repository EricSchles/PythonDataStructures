def is_divisible_by_3(arg):
    if type(arg) == type(int()):
        if arg % 3 == 0:
            print "yes,"+str(arg)+" is divisible by 3"
        else:
            print "no,"+str(arg)+" is not divisible by 3"
    else:
        print "invalid input"

num = input("Please input a number to check:")
is_divisible_by_3(num)
